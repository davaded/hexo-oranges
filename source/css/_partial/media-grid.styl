.markdown-body
  .media-grid-container
    display: grid
    grid-template-columns: repeat(2, 1fr)
    gap: 20px
    margin: 1.5em 0

    .media-item
      width: 100%
      
      img
        width: 100%
        height: auto
        object-fit: cover
        display: block
      
      video
        width: 100%
        height: auto
        display: block
        max-height: 500px

    .video-container
      width: 100%
      position: relative
      padding-bottom: 56.25%

      iframe, video
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100% 